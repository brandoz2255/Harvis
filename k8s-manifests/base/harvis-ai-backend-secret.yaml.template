# Harvis AI Backend Secret Template
# 
# To use this template:
# 1. Copy this file to harvis-ai-backend-secret.yaml
# 2. Replace the base64-encoded placeholder values with your actual secrets
# 3. Apply with: kubectl apply -f harvis-ai-backend-secret.yaml -n ai-agents
#
# To encode your values in base64:
#   echo -n "your-secret-value" | base64
#
apiVersion: v1
kind: Secret
metadata:
  name: harvis-ai-backend-secret
  namespace: ai-agents
type: Opaque
data:
  # Database connection URL (base64 encoded)
  # Example: postgresql://user:password@postgres:5432/harvis
  database-url: cG9zdGdyZXNxbDovL3VzZXI6cGFzc3dvcmRAaG9zdDo1NDMyL2RhdGFiYXNl

  # Local Ollama API key (base64 encoded)
  # For your local k8s Ollama instance
  ollama-api-key: eW91ci1sb2NhbC1vbGxhbWEtYXBpLWtleQ==

  # External Ollama API key (base64 encoded)
  # For external endpoints like coyotedev.ngrok.app running qwen3:235b
  external-ollama-api-key: eW91ci1leHRlcm5hbC1vbGxhbWEtYXBpLWtleQ==

  # Gemini API key (optional, base64 encoded)
  # gemini-api-key: eW91ci1nZW1pbmktYXBpLWtleQ==
